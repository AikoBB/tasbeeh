<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">

    </style>


    <style name="CustomActionBarTheme"
        parent="@style/Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/ColorPrimary</item>
        <item name="colorPrimaryDark">@color/ColorPrimary</item>
    </style>


    <!-- ActionBar title text -->
    <style name="MyActionBarTitleText"
        parent="@style/TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textColor">@android:color/white</item>
    </style>

    <!-- ActionBar tabs text -->
    <style name="MyActionBarTabText"
        parent="@style/Widget.AppCompat.ActionBar.TabText">
        <item name="android:textColor">@android:color/white</item>
    </style>

    <!-- Style for text field. -->
    <style name="MyFontStyle" >
        <item name="android:textSize">12pt</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#134286</item>
        <!--<item name="android:textAlignment">center</item>-->

    </style>
    <!-- Styles for text main activity. -->
    <style name="SpinnerStyle">
        <item name="android:textSize">12pt</item>
        <item name="android:textStyle">italic|bold</item>
        <item name="android:textColor">#134286</item>
        <item name="android:gravity">center</item>
    </style>
    <style name="CounterStyle">
        <item name="android:textSize">16pt</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#134286</item>
        <item name="android:gravity">center</item>
    </style>
    <!-- Styles for text insert/edit activity. -->
    <style name="SecondActivityStyles">
        <item name="android:textSize">10pt</item>
        <item name="android:textStyle">bold|italic</item>
        <item name="android:textColor">#134286</item>
        <item name="android:gravity">center</item>
    </style>
</resources>
