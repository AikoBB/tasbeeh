<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="TitleTextStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/medium_text</item>
        <item name="android:textColor">@color/md_black_1000</item>
        <item name="android:gravity">left</item>
        <item name="android:paddingTop">@dimen/small_padding</item>
        <item name="android:paddingBottom">@dimen/small_padding</item>
        <item name="android:paddingRight">@dimen/normal_padding</item>
        <item name="android:paddingLeft">@dimen/normal_padding</item>
        <item name="android:background">@color/md_grey_200</item>
    </style>

    <style name="AppButtonStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/md_white_1000</item>
        <item name="android:paddingTop">@dimen/small_padding</item>
        <item name="android:paddingBottom">@dimen/small_padding</item>
        <item name="android:paddingLeft">@dimen/medium_padding</item>
        <item name="android:paddingRight">@dimen/medium_padding</item>
        <item name="android:background">@drawable/bgr_blue_btn</item>
    </style>


</resources>